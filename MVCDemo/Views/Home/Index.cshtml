@model IEnumerable<MVCDemo.Models.Employee>

<div style="font-family:Arial">
    <h2>Employee List</h2>

    @using (Html.BeginForm("Delete", "Home", FormMethod.Post))
    {
        <table border="1">
            <thead>
                <tr>
                    <th>
                        Select
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Gender
                    </th>
                    <th>
                        Email
                    </th>
                </tr>
            </thead>
            <tbody>
                <!--Since we have a editor template with the same name as the model of this view (Employee)
                    below line of code will render the editor template view content in this view -->
                @Html.EditorForModel()
            </tbody>
        </table>
        <input type="submit" value="Delete selected employees" />
    }
</div>

